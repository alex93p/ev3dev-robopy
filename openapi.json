      "Paginazione" : {
        "type" : "number",
        "example" : 1000
      },
      "InfoGrafico" : {
        "type" : "object",
        "properties" : {
          "titolo" : {
            "type" : "string",
            "example" : "nome colonna 1"
          },
          "etichette" : {
            "type" : "array",
            "example" : [ "label 1", "label 2" ],
            "items" : {
              "type" : "string"
            }
          },
          "conteggi" : {
