            "type" : "boolean"
          },
          "data" : {
            "oneOf" : [ {
              "$ref" : "#/components/schemas/Categoria"
            }, {
              "$ref" : "#/components/schemas/ModificheCSV"
            } ]
          }
        }
      },
      "CSV_rows" : {
        "type" : "object",
        "properties" : {
          "key" : {
            "type" : "string"
          },
          "value" : {
            "anyOf" : [ {
